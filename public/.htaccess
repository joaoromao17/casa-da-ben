
# Configuração de MIME types para Capacitor WebView
<IfModule mod_mime.c>
    # JavaScript
    AddType text/javascript .js
    AddType text/javascript .mjs
    AddType application/javascript .js
    AddType application/javascript .mjs
    
    # TypeScript (caso seja servido diretamente)
    AddType text/javascript .ts
    AddType text/javascript .tsx
    
    # CSS
    AddType text/css .css
    
    # JSON
    AddType application/json .json
    
    # Web App Manifest
    AddType application/manifest+json .webmanifest
    
    # Fonts
    AddType font/woff2 .woff2
    AddType font/woff .woff
    AddType font/ttf .ttf
    AddType font/otf .otf
    
    # Images
    AddType image/webp .webp
    AddType image/svg+xml .svg
</IfModule>

# Headers para garantir que arquivos JavaScript sejam interpretados corretamente
<IfModule mod_headers.c>
    # Para arquivos JavaScript
    <FilesMatch "\.(js|mjs)$">
        Header set Content-Type "text/javascript; charset=utf-8"
    </FilesMatch>
    
    # Para arquivos CSS
    <FilesMatch "\.css$">
        Header set Content-Type "text/css; charset=utf-8"
    </FilesMatch>
    
    # Para arquivos JSON
    <FilesMatch "\.json$">
        Header set Content-Type "application/json; charset=utf-8"
    </FilesMatch>
</IfModule>
